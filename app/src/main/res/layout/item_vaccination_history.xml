<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Vaccine Name and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_vaccine_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DPT Booster 2"
                android:textColor="#1F2937"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_badge_category"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="completed"
                android:textColor="#059669"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Due Date -->
        <LinearLayout
            android:id="@+id/layout_due_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_event"
                app:tint="#6B7280" />

            <TextView
                android:id="@+id/tv_due_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Due: Oct 10, 2024"
                android:textColor="#6B7280"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Given Date -->
        <LinearLayout
            android:id="@+id/layout_given_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_check"
                app:tint="#059669" />

            <TextView
                android:id="@+id/tv_given_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Given: Oct 8, 2024"
                android:textColor="#059669"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Batch Number -->
        <TextView
            android:id="@+id/tv_batch_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Batch: ABC123"
            android:textColor="#9CA3AF"
            android:textSize="12sp"
            android:visibility="gone" />

        <!-- Notes -->
        <TextView
            android:id="@+id/tv_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Notes go here"
            android:textColor="#6B7280"
            android:textSize="13sp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
