<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Back"
            android:padding="12dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="#4B5563" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginEnd="48dp"
            android:text="New Patient Registration"
            android:textColor="#1F2937"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/header_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F3F4F6"
        app:layout_constraintTop_toBottomOf="@id/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/bottom_actions"
        app:layout_constraintTop_toBottomOf="@id/header_divider">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Personal Details Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="#FFFFFF">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personal Details"
                        android:textColor="#1F2937"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp" />

                    <!-- Full Name Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name *"
                        android:textColor="#1F2937"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Enter patient's full name"
                        app:hintTextColor="#9CA3AF"
                        app:boxStrokeColor="@color/primary">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_full_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#1F2937"
                            android:inputType="textPersonName" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Age *"
                                android:textColor="#1F2937"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Age in years"
                                app:hintTextColor="#9CA3AF"
                                app:boxStrokeColor="@color/primary">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_age"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#1F2937"
                                    android:inputType="number" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gender *"
                                android:textColor="#1F2937"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:background="#FFFFFF"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                                <Spinner
                                    android:id="@+id/spinner_gender"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingStart="12dp"
                                    android:paddingEnd="12dp"
                                    android:popupBackground="#FFFFFF"
                                    android:background="@drawable/bg_input_field" />
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Patient Category *"
                        android:textColor="#1F2937"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="16dp"
                        android:background="#FFFFFF">
                        <Spinner
                            android:id="@+id/spinner_category"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:popupBackground="#FFFFFF"
                            android:background="@drawable/bg_input_field" />
                    </FrameLayout>

                    <!-- Address Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address *"
                        android:textColor="#1F2937"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Enter full address"
                        app:hintTextColor="#9CA3AF"
                        app:boxStrokeColor="@color/primary">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#1F2937"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Blood Group Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blood Group"
                        android:textColor="#1F2937"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="16dp"
                        android:background="#FFFFFF">
                        <Spinner
                            android:id="@+id/spinner_blood_group"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:popupBackground="#FFFFFF"
                            android:background="@drawable/bg_input_field" />
                    </FrameLayout>

                    <!-- Phone Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:textColor="#1F2937"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="10-digit mobile number"
                        app:hintTextColor="#9CA3AF"
                        app:boxStrokeColor="@color/primary">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#1F2937"
                            android:inputType="phone" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- ABHA ID Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ABHA ID (Optional)"
                        android:textColor="#1F2937"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="14-digit ABHA ID"
                        app:hintTextColor="#9CA3AF"
                        app:boxStrokeColor="@color/primary">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_abha_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#1F2937"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Dynamic Visit Sections -->
            <!-- PREGNANCY (Simplified but maintaining all IDs for Save logic) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_pregnancy_visit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="#FFFFFF">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Initial Pregnancy Visit"
                        android:textColor="#1F2937"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp" />
                    
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="LMP Date *"
                        app:hintTextColor="#9CA3AF"
                        app:boxStrokeColor="@color/primary">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_lmp_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="LMP Date *"
                            android:textColor="#1F2937"
                            android:textColorHint="#9CA3AF"
                            android:focusable="false"
                            android:clickable="true" />
                    </com.google.android.material.textfield.TextInputLayout>
                    
                    <TextView
                        android:id="@+id/tv_edd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EDD will be calculated"
                        android:textColor="#3B82F6"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">
                        <EditText android:id="@+id/et_bp_systolic" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="Sys BP" android:textColor="#1F2937" android:textColorHint="#9CA3AF" android:inputType="number" />
                        <EditText android:id="@+id/et_bp_diastolic" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="Dia BP" android:textColor="#1F2937" android:textColorHint="#9CA3AF" android:inputType="number" />
                    </LinearLayout>
                    
                    <EditText android:id="@+id/et_pregnancy_weight" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:hint="Weight (kg)" android:textColor="#1F2937" android:textColorHint="#9CA3AF" android:inputType="numberDecimal" />
                    <EditText android:id="@+id/et_hemoglobin" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:hint="Hemoglobin (g/dL)" android:textColor="#1F2937" android:textColorHint="#9CA3AF" android:inputType="numberDecimal" />
                    
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Danger Signs" android:textStyle="bold" android:layout_marginBottom="8dp" android:textColor="#1F2937" />
                    <com.google.android.material.chip.ChipGroup android:layout_width="match_parent" android:layout_height="wrap_content">
                        <com.google.android.material.chip.Chip android:id="@+id/chip_headache" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Headache" android:textColor="#1F2937" android:checkable="true" />
                        <com.google.android.material.chip.Chip android:id="@+id/chip_swelling" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Swelling" android:textColor="#1F2937" android:checkable="true" />
                        <com.google.android.material.chip.Chip android:id="@+id/chip_bleeding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bleeding" android:textColor="#1F2937" android:checkable="true" />
                        <com.google.android.material.chip.Chip android:id="@+id/chip_blurred_vision" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Blurred Vision" android:textColor="#1F2937" android:checkable="true" />
                        <com.google.android.material.chip.Chip android:id="@+id/chip_reduced_movement" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Reduced Movement" android:textColor="#1F2937" android:checkable="true" />
                    </com.google.android.material.chip.ChipGroup>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Medicines Given" android:textStyle="bold" android:textColor="#1F2937" android:layout_marginTop="16dp" android:layout_marginBottom="8dp" />
                    <CheckBox android:id="@+id/cb_iron_tablets" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Iron Tablets" android:textColor="#1F2937" />
                    <CheckBox android:id="@+id/cb_calcium_tablets" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Calcium Tablets" android:textColor="#1F2937" />
                    <CheckBox android:id="@+id/cb_tetanus_injection" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tetanus Injection" android:textColor="#1F2937" />
                    
                    <EditText android:id="@+id/et_next_visit_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:hint="Next Visit Date" android:textColor="#1F2937" android:textColorHint="#9CA3AF" android:focusable="false" android:clickable="true" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CHILD (Simplified but maintaining all IDs for Save logic) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_child_visit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="#FFFFFF">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Initial Child Care"
                        android:textColor="#1F2937"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp" />
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="16dp">
                        <EditText android:id="@+id/et_child_weight" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="8dp" android:hint="Weight (kg)" android:textColor="#1F2937" android:textColorHint="#9CA3AF" android:inputType="numberDecimal" />
                        <EditText android:id="@+id/et_child_height" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="8dp" android:hint="Height (cm)" android:textColor="#1F2937" android:textColorHint="#9CA3AF" android:inputType="numberDecimal" />
                    </LinearLayout>
                    <EditText android:id="@+id/et_child_muac" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:hint="MUAC (cm)" android:textColor="#1F2937" android:textColorHint="#9CA3AF" android:inputType="numberDecimal" />
                    <EditText android:id="@+id/et_child_temperature" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:hint="Temperature (Â°F)" android:textColor="#1F2937" android:textColorHint="#9CA3AF" android:inputType="numberDecimal" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Screen Symptoms" android:textStyle="bold" android:textColor="#1F2937" android:layout_marginBottom="8dp" />
                    <CheckBox android:id="@+id/cb_fever" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Fever" android:textColor="#1F2937" />
                    <CheckBox android:id="@+id/cb_diarrhea" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Diarrhea" android:textColor="#1F2937" />
                    <CheckBox android:id="@+id/cb_cough_cold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cough/Cold" android:textColor="#1F2937" />
                    <CheckBox android:id="@+id/cb_vomiting" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Vomiting" android:textColor="#1F2937" />
                    <CheckBox android:id="@+id/cb_weakness" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Weakness" android:textColor="#1F2937" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Breastfeeding Status" android:textStyle="bold" android:textColor="#1F2937" android:layout_marginTop="16dp" android:layout_marginBottom="8dp" />
                    <RadioGroup android:id="@+id/rg_breastfeeding" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                        <RadioButton android:id="@+id/rb_breastfeeding_yes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Yes" android:textColor="#1F2937" />
                        <RadioButton android:id="@+id/rb_breastfeeding_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="No" android:textColor="#1F2937" />
                    </RadioGroup>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Complementary Feeding" android:textStyle="bold" android:textColor="#1F2937" android:layout_marginTop="16dp" android:layout_marginBottom="8dp" />
                    <RadioGroup android:id="@+id/rg_complementary_feeding" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                        <RadioButton android:id="@+id/rb_complementary_yes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Yes" android:textColor="#1F2937" />
                        <RadioButton android:id="@+id/rb_complementary_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="No" android:textColor="#1F2937" />
                    </RadioGroup>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Appetite" android:textStyle="bold" android:textColor="#1F2937" android:layout_marginTop="16dp" android:layout_marginBottom="8dp" />
                    <RadioGroup android:id="@+id/rg_appetite" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                        <RadioButton android:id="@+id/rb_appetite_good" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Good" android:textColor="#1F2937" />
                        <RadioButton android:id="@+id/rb_appetite_poor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Poor" android:textColor="#1F2937" />
                    </RadioGroup>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Immunization" android:textStyle="bold" android:textColor="#1F2937" android:layout_marginTop="16dp" android:layout_marginBottom="8dp" />
                    <Spinner android:id="@+id/spinner_last_vaccine" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:popupBackground="#FFFFFF" />
                    <EditText android:id="@+id/et_next_vaccine_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Next Vaccine Date" android:textColor="#1F2937" android:textColorHint="#9CA3AF" android:focusable="false" android:clickable="true" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- GENERAL (Maintaining all IDs for Save logic) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_general_visit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="#FFFFFF">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="General Health Screening"
                        android:textColor="#1F2937"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp" />
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="16dp">
                        <EditText android:id="@+id/et_general_bp_systolic" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="8dp" android:hint="Sys BP" android:textColor="#1F2937" android:textColorHint="#9CA3AF" android:inputType="number" />
                        <EditText android:id="@+id/et_general_bp_diastolic" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="8dp" android:hint="Dia BP" android:textColor="#1F2937" android:textColorHint="#9CA3AF" android:inputType="number" />
                    </LinearLayout>
                    <EditText android:id="@+id/et_general_weight" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:hint="Weight (kg)" android:textColor="#1F2937" android:textColorHint="#9CA3AF" android:inputType="numberDecimal" />
                    <EditText android:id="@+id/et_sugar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:hint="Blood Sugar (mg/dL)" android:textColor="#1F2937" android:textColorHint="#9CA3AF" android:inputType="number" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Symptoms" android:textStyle="bold" android:textColor="#1F2937" android:layout_marginBottom="8dp" />
                    <CheckBox android:id="@+id/cb_general_fever" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Fever" android:textColor="#1F2937" />
                    <CheckBox android:id="@+id/cb_body_pain" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Body Pain" android:textColor="#1F2937" />
                    <CheckBox android:id="@+id/cb_breathlessness" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Breathlessness" android:textColor="#1F2937" />
                    <CheckBox android:id="@+id/cb_dizziness" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dizziness" android:textColor="#1F2937" />
                    <CheckBox android:id="@+id/cb_chest_pain" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Chest Pain" android:textColor="#1F2937" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Lifestyle" android:textStyle="bold" android:textColor="#1F2937" android:layout_marginTop="16dp" android:layout_marginBottom="8dp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tobacco Use" android:textColor="#1F2937" android:textSize="12sp" />
                    <RadioGroup android:id="@+id/rg_tobacco" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                        <RadioButton android:id="@+id/rb_tobacco_yes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Yes" android:textColor="#1F2937" />
                        <RadioButton android:id="@+id/rb_tobacco_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="No" android:textColor="#1F2937" />
                    </RadioGroup>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Alcohol Consumption" android:textColor="#1F2937" android:textSize="12sp" android:layout_marginTop="8dp" />
                    <RadioGroup android:id="@+id/rg_alcohol" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                        <RadioButton android:id="@+id/rb_alcohol_yes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Yes" android:textColor="#1F2937" />
                        <RadioButton android:id="@+id/rb_alcohol_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="No" android:textColor="#1F2937" />
                    </RadioGroup>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Physical Activity" android:textColor="#1F2937" android:textSize="12sp" android:layout_marginTop="8dp" />
                    <RadioGroup android:id="@+id/rg_physical_activity" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                        <RadioButton android:id="@+id/rb_activity_low" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Low" android:textColor="#1F2937" />
                        <RadioButton android:id="@+id/rb_activity_moderate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Moderate" android:textColor="#1F2937" />
                        <RadioButton android:id="@+id/rb_activity_active" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Active" android:textColor="#1F2937" />
                    </RadioGroup>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_referral"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Necessary Referral?" />
                    
                    <EditText android:id="@+id/et_follow_up_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:hint="Follow-up Date" android:textColor="#1F2937" android:textColorHint="#9CA3AF" android:focusable="false" android:clickable="true" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F3F4F6"
        app:layout_constraintBottom_toTopOf="@id/bottom_actions" />

    <LinearLayout
        android:id="@+id/bottom_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="#0066CC"
            android:text="Save Patient (Offline)"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
