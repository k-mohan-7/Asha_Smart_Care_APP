<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Back"
            android:padding="12dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="#4B5563" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginEnd="48dp"
            android:text="Add Visit"
            android:textColor="#1F2937"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/header_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F3F4F6"
        app:layout_constraintTop_toBottomOf="@id/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/bottom_actions"
        app:layout_constraintTop_toBottomOf="@id/header_divider">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <!-- Visit Details Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visit Details"
                        android:textColor="#1F2937"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visit Type *"
                        android:textColor="#1F2937"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/bg_input_field">
                        <Spinner
                            android:id="@+id/spinnerVisitType"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:popupBackground="#FFFFFF" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:hint="Visit Date *"
                            app:hintTextColor="#9CA3AF"
                            app:boxStrokeColor="@color/primary">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etVisitDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Visit Date *"
                                android:textColor="#1F2937"
                                android:textColorHint="#9CA3AF"
                                android:focusable="false"
                                android:clickable="true" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:hint="Next Visit"
                            app:hintTextColor="#9CA3AF"
                            app:boxStrokeColor="@color/primary">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etNextVisitDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Next Visit"
                                android:textColor="#1F2937"
                                android:textColorHint="#9CA3AF"
                                android:focusable="false"
                                android:clickable="true" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Purpose *"
                        app:hintTextColor="#9CA3AF"
                        app:boxStrokeColor="@color/primary">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPurpose"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Purpose *"
                            android:textColor="#1F2937"
                            android:textColorHint="#9CA3AF"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:minLines="2" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Assessment Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Assessment &amp; Notes"
                        android:textColor="#1F2937"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Findings"
                        app:hintTextColor="#9CA3AF"
                        app:boxStrokeColor="@color/primary">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etFindings"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Findings"
                            android:textColor="#1F2937"
                            android:textColorHint="#9CA3AF"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:minLines="2" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Recommendations"
                        app:hintTextColor="#9CA3AF"
                        app:boxStrokeColor="@color/primary">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etRecommendations"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Recommendations"
                            android:textColor="#1F2937"
                            android:textColorHint="#9CA3AF"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:minLines="2" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Additional Notes"
                        app:hintTextColor="#9CA3AF"
                        app:boxStrokeColor="@color/primary">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNotes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Additional Notes"
                            android:textColor="#1F2937"
                            android:textColorHint="#9CA3AF"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:minLines="2" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F3F4F6"
        app:layout_constraintBottom_toTopOf="@id/bottom_actions" />

    <LinearLayout
        android:id="@+id/bottom_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="#0066CC"
            android:text="Save Visit Details"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
