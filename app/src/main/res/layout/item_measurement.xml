<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:gravity="center_vertical">

    <!-- Date and Metrics -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_measurement_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="March 10, 2024"
            android:textColor="#1F2937"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Weight Indicator -->
            <View
                android:id="@+id/dot_weight"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/bg_badge_category" />

            <TextView
                android:id="@+id/tv_measurement_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="62 kg"
                android:textColor="#6B7280"
                android:textSize="13sp" />

            <!-- Hemoglobin Indicator -->
            <View
                android:id="@+id/dot_hemoglobin"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_badge_risk" />

            <TextView
                android:id="@+id/tv_measurement_hemoglobin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="10.5 g/dL"
                android:textColor="#6B7280"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Edit Icon -->
    <ImageView
        android:id="@+id/iv_edit_measurement"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_edit"
        android:padding="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="#6B7280" />

</LinearLayout>
