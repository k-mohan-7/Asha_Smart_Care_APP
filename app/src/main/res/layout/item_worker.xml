<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Worker Avatar -->
        <ImageView
            android:id="@+id/ivWorkerAvatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_person"
            android:background="@drawable/circle_primary_bg"
            android:padding="12dp"
            app:tint="@android:color/white" />

        <!-- Worker Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWorkerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Priya Sharma"
                android:textColor="#111827"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvWorkerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Worker ID: ASHA-1024"
                android:textColor="#6B7280"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvWorkerVillage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Village: Rampur"
                android:textColor="#6B7280"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        android:layout_marginTop="90dp">

        <!-- Status Badge / Active Button -->
        <TextView
            android:id="@+id/btnActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            android:textColor="#059669"
            android:background="@drawable/bg_green_light"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Deactivate / Approve Button -->
        <TextView
            android:id="@+id/btnAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deactivate"
            android:textColor="#DC2626"
            android:background="@drawable/bg_red_light"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
